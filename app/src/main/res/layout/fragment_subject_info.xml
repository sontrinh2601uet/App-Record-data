<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/subInfo_layout_padding"
    tools:context=".SubjectInfoFragment">

    <TextView
        android:id="@+id/subInfo_label_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/subInfo_label_margin_right"
        android:gravity="center_vertical"
        android:text="@string/subInfo_label_date"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subInfo_value_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/subInfo_label_date"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/subInfo_label_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_label_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/subInfo_label_margin_right"
        android:gravity="center_vertical"
        android:text="@string/subInfo_label_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subInfo_value_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_value_date"
        android:layout_toRightOf="@id/subInfo_label_name"
        android:gravity="center_vertical" />


    <TextView
        android:id="@+id/subInfo_label_job"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_label_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/subInfo_label_margin_right"
        android:gravity="center_vertical"
        android:text="@string/subInfo_label_job"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subInfo_value_job"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_label_name"
        android:layout_toRightOf="@id/subInfo_label_job"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/subInfo_label_age"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_label_job"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/subInfo_label_margin_right"
        android:gravity="center_vertical"
        android:text="@string/subInfo_label_age"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subInfo_value_age"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_label_job"
        android:layout_toRightOf="@id/subInfo_label_age"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/subInfo_label_sex"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_label_age"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/subInfo_label_margin_right"
        android:gravity="center_vertical"
        android:text="@string/subInfo_label_sex"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subInfo_value_sex"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_value_age"
        android:layout_toRightOf="@id/subInfo_label_sex"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/subInfo_label_device_version"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_label_sex"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/subInfo_label_margin_right"
        android:gravity="center_vertical"
        android:text="@string/subInfo_label_device_version"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subInfo_value_device_version"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/subInfo_element_height"
        android:layout_below="@id/subInfo_value_sex"
        android:layout_toRightOf="@id/subInfo_label_device_version"
        android:gravity="center_vertical" />

</RelativeLayout>
